<EditForm Model="prof" OnValidSubmit="onValidSubbmit">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label>Código</label>
        <div>
            <InputText class="form-control" @bind-Value="@prof.CodProfesion" />
            <ValidationMessage For="@(() => prof.CodProfesion)" />
        </div>
    </div>

    <div class="form-group">
        <label>Título</label>
        <div>
            <InputText class="form-control" @bind-Value="@prof.Titulo" />
            <ValidationMessage For="@(() => prof.Titulo)" />
        </div>
    </div>
    <br />
    <button class="btn btn-primary" type="submit">Aceptar</button>
    <button class="btn btn-secondary" @onclick="onCancel">Cancelar</button>
</EditForm>

@code {
    [Parameter] public Profesion prof { get; set; } = new Profesion();
    [Parameter] public EventCallback onValidSubbmit { get; set; }
    [Parameter] public EventCallback onCancel { get; set; }
}
